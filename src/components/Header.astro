---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import GitHubIcon from "../assets/Octicons-mark-github.svg";
import DriveIcon from "../assets/Google_Drive_icon_(2020).svg";
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/aventures">Aventures</HeaderLink>
			<HeaderLink href="/contingut_extra">Més contingut per les teves aventures</HeaderLink>
			<HeaderLink href="/mid_5e">Masmorres i dracs 5e en català</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://github.com/Micmiquel/Masmorres_i_Dracs__Micmiquel" target="_blank">
				<span class="sr-only">Contingut per Masmorres i Dracs a GitHub</span>
				<img src={GitHubIcon.src} alt="GitHub" width="32" height="32" loading="lazy" decoding="async" />
			</a>
			<a href="https://drive.google.com/drive/folders/1CNz4eXQIZ6A3etpZRlDnDzltgawrJPRX?usp=drive_link" target="_blank">
				<span class="sr-only">Contingut per Masmorres i Dracs a Google Drive</span>
				<img src={DriveIcon.src} alt="Google Drive" width="32" height="32" loading="lazy" decoding="async" />
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
